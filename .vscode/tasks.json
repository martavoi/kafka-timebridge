{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "bin/kafka-timebridge",
                "./cmd"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$go"
            ],
            "detail": "Build the main Go application from cmd directory"
        }
    ]
}
